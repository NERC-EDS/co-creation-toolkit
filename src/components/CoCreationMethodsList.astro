---

interface CoCreationMethod {
  title: string;
  description: string;
  category: string;
  link: string;
}

const coCreationMethods: CoCreationMethod[] = [
  {
    title: "Design Thinking Workshops",
    description: "A structured process for understanding user needs, generating ideas, prototyping, and testing solutions.",
    category: "Collaborative Workshops and Hackathons",
    link: "https://www.smaply.com/blog/design-thinking-workshops"
  },
  {
    title: "Hackathons",
    description: "Intensive, short-term collaborative events to develop innovative solutions to a problem.",
    category: "Collaborative Workshops and Hackathons",
    link: "#"
  },
  {
    title: "Citizen Science Data Collection",
    description: "Engage citizens to collect environmental data (e.g., water quality, air pollution, biodiversity).",
    category: "Citizen Science and Crowdsourcing",
    link: "#"
  },
  {
    title: "Feedback and Refinement",
    description: "Seek user input on data visualization, interpretation, and application.",
    category: "Citizen Science and Crowdsourcing",
    link: "#"
  },
  {
    title: "Focus Groups",
    description: "Gather in-depth insights from specific target groups (e.g., farmers, indigenous communities).",
    category: "Community Engagement and Consultation",
    link: "#"
  },
  {
    title: "Surveys and Questionnaires",
    description: "Collect quantitative data on user needs, preferences, and behaviors.",
    category: "Community Engagement and Consultation",
    link: "#"
  },
  {
    title: "Public-Private Partnerships",
    description: "Combine resources and expertise from government, businesses, and NGOs.",
    category: "Partnerships and Collaborations",
    link: "#"
  },
  {
    title: "Academic Collaborations",
    description: "Leverage research institutions for data analysis and modeling.",
    category: "Partnerships and Collaborations",
    link: "#"
  },
  {
    title: "Online Communities",
    description: "Foster collaboration and knowledge sharing among stakeholders.",
    category: "Online Platforms and Tools",
    link: "#"
  },
  {
    title: "Interactive Mapping Tools",
    description: "Allow users to explore and contribute to environmental data visualization.",
    category: "Online Platforms and Tools",
    link: "#"
  },
  {
    title: "Scenario Planning",
    description: "Explore potential future environmental conditions and develop corresponding data products.",
    category: "Specific Techniques for Environmental Data",
    link: "#"
  },
  {
    title: "Data Visualization Workshops",
    description: "Collaboratively design effective ways to communicate complex environmental data.",
    category: "Specific Techniques for Environmental Data",
    link: "#"
  }
];

const groupedMethods = coCreationMethods.reduce<Record<string, CoCreationMethod[]>>((acc, method) => {
  if (!acc[method.category]) {
    acc[method.category] = [];
  }
  acc[method.category].push(method);
  return acc;
}, {});

---

<!-- Icon Blocks -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="max-w-3xl mx-auto">
    <!-- Grid -->
    <div class="grid gap-12">
      <div>
        <h2 class="text-3xl text-gray-800 font-bold lg:text-4xl dark:text-white">
          Other Co-Creation Methods
        </h2>
        <p class="mt-3 text-gray-800 dark:text-neutral-400">
          Explore other methods to encourage collaboration and find creative solutions for environmental problems.
        </p>
      </div>

      {Object.entries(groupedMethods).map(([category, methods]) => (
        <div class="space-y-6 lg:space-y-10">
          <h3 class="text-2xl font-semibold text-gray-800 dark:text-white">{category}</h3>
          {methods.map((method) => (
            <!-- Icon Block -->
            <a class="flex gap-x-5 sm:gap-x-8 hover:bg-gray-100 p-5 rounded-lg" href={method.link}>
              <svg class="shrink-0 mt-2 size-6 text-gray-800 dark:text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
              <div class="grow">
                <h4 class="text-base sm:text-lg font-semibold text-gray-800 dark:text-neutral-200">
                  {method.title}
                </h4>
                <p class="mt-1 text-gray-600 dark:text-neutral-400">
                  {method.description}
                </p>
                <p class="mt-3 inline-flex items-center gap-x-1 text-sm font-semibold text-gray-800 dark:text-neutral-200">
                  Learn more
                  <svg class="shrink-0 size-4 transition ease-in-out group-hover:translate-x-1 group-focus:translate-x-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                </p>
              </div>
            </a>
            <!-- End Icon Block -->
          ))}
        </div>
      ))}
    </div>
    <!-- End Grid -->
  </div>
</div>
<!-- End Icon Blocks -->